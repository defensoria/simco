<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD iBatis Mapper 3.0 //EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="gob.dp.simco.comun.dao.DistritoDao">
    
    <resultMap id="distritoMap" type="distrito">
        <id property="id" column="N_ID_DSTRO" />
        <result property="provincia" column="N_ID_PROV"/>
        <result property="descripcion" column="C_DESCDSTRO"/>
        <result property="coordenadax" column="C_COORDENADAX"/>
        <result property="coordenaday" column="C_COORDENADAY"/>
        <result property="zoom" column="N_ZOOM"/>
    </resultMap>  

    <select id="distritoLista" resultMap="distritoMap" parameterType="long">
        select 
        N_ID_DSTRO, 
        N_ID_PROV,  
        C_DESCDSTRO
        FROM SIMCO_UBIGEO_DSTRO
        WHERE N_ID_PROV = #{id}
        ORDER BY C_DESCDSTRO
    </select>   
    
    <select id="distritoOne" resultMap="distritoMap" parameterType="long">
        select 
        N_ID_DSTRO, 
        N_ID_PROV,  
        C_DESCDSTRO,
        C_COORDENADAX,
        C_COORDENADAY,
        N_ZOOM
        FROM SIMCO_UBIGEO_DSTRO
        WHERE N_ID_DSTRO = #{id}
        ORDER BY C_DESCDSTRO
    </select>  
</mapper>