    <select id="casoBuscar" resultMap="casoMap" parameterType="caso">
        SELECT 
        A.N_ID_CASO,
        A.C_NOMCASO,
        A.C_DESCPRELIMCASO,
        A.C_TIPOCASO,
        A.C_JUSTIFICACION,
        A.C_OBSERVACIONES,
        A.D_FECHACREACION,
        A.D_FECHAPUBLICACION,
        A.D_FECHAMODIFICACION,
        A.C_CODIGOCASO,
        A.C_TIPOASUNTO,
        A.C_TIPOESTADO,
        A.C_TIPODIALOGO,
        A.C_TIPOMECANISMO,
        A.C_TIPOPARTICIPACION,
        A.N_IDDEPART,
        A.N_IDPROV,
        A.N_IDDISTR,
        A.C_SUBTIPOCASO,
        A.C_PRIMERNIVEL,
        A.C_SEGUNDONIVEL,
        A.C_TERCERNIVEL,
        A.C_MOMENTODIALOGO,
        A.C_ADJUNTIADEFENSORIAL,
        A.N_VERSION,
        A.C_USUREGISTRO,
        A.C_INDVIGENTE
        FROM SIMCO_REG_CASO A
        <where>
            A.C_ESTADOREGISTRO = 'PEN' 
            <if test="nombre != null">
                AND A.C_NOMCASO like #{nombre}
            </if>
            <if test="descripcionPreliminar != null">
                AND A.C_DESCPRELIMCASO=#{descripcionPreliminar}
            </if>
            <if test="id != null">
                AND A.N_ID_CASO=#{id}
            </if>
            <if test="usuarioRegistro != null">
                AND A.C_USUREGISTRO=#{usuarioRegistro}
            </if>
            AND A.C_INDVIGENTE= 'A'
        </where>
        ORDER BY A.N_ID_CASO
    </select>
    
    <select id="casoBuscarOne" resultMap="casoMap" parameterType="long">
        SELECT 
        *
        FROM SIMCO_REG_CASO A
        <where>
            A.C_ESTADOREGISTRO = 'PEN' 
            AND A.N_ID_CASO=#{id}
        </where>
    </select>
    

